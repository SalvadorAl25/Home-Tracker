<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <data>
    
        <record id="contracts_view_tree" model="ir.ui.view">
            <field name="name">contracts.view.tree</field>
            <field name="model">contracts</field>
            <field name="arch" type="xml">
                <tree string="Contracts">
                    
                </tree>
            </field>
        </record>

        <record id="contracts_view_form" model="ir.ui.view">
            <field name="name">contracts.view.form</field>
            <field name="model">contracts</field>
            <field name="arch" type="xml">
                <form string="Contracts">
                    <sheet>
                        <div class="oe_title">
                            <h1 class="mt0">
                                <field name="name_t_contract" placeholder="Contrat" />
                            </h1>
                        </div>
                        <br/>
                        <group>
                            <group>
                                <field name="date_contract" />
                            </group>
                            <group>
                                <field name="contract_doc" />
                            </group>
                        </group>
                        <group string="Involved">
                            <group string="Administrators">
                                <field name="property_id" />
                                <field name="admin_id" />
                            </group>
                            <group string="Tenant">
                                <field name="tenant_id" />
                                <field name="endorsement_person_id" />
                            </group>
                        </group>
                        <group string="Amounts">
                            <group>
                                <field name="mount_maintenance" />
                                <field name="mount_rent" />
                                <field name="mount_deposit" />
                                <field name="amount_deposit" />
                                <field name="currency_id" />
                            </group>
                            <group>
                                <field name="type_commission" />
                                <field name="mount_commission" />
                                <field name="penalty_id" />
                            </group>
                        </group>
                        <notebook>
                            <page string="Dashboard Payments">
                                <field name="payments_ids"></field>
                            </page>
                            <page string="Maintenance &amp; Services">
                                <field name="maintenance_n_services_ids"></field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="contracts_action" model="ir.actions.act_window">
            <field name="name">Action Name</field>
            <field name="res_model">contracts</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem
            id="contracts_menu"
            name="Contracts"
            action="contracts_action"
            parent="contracts_menu"
            sequence="1"/>
    
    </data>
    

</odoo>
